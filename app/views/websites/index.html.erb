<div class="right">
	<%= link_to 'New Website', new_website_path, class: "button" %>
</div>

<div class="spacer"></div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= link_to website.name, website %></td>
        <td><%= link_to 'Run All Tests', website_run_path(website) %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'x', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
